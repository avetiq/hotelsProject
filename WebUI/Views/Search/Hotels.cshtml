@model WebUI.Models.SearchResult
@using System.Text.Json;

<div class="container">
    <div id="Div1">

        @foreach (var item in Model.hotelListObj)
        {
            <div id="searchInfo" class="container">

                <div class="row">
                    <div class="col-sm-4">
                        <a >
                            <img src="@item.mainPhoto" class="img-responsive" alt="Responsive image">
                        </a>
                    </div>
                    <div class="col-sm-8">
                        <a href='@Url.Action("Room", "Search", new {id = item.hotelID, dateFrom = Model.SearchFromDate, dateTo = Model.SearchToDate, hotelName = item.hotelName, cityName = item.cityName, descriptionHotelRoom = item.longDescription})'
>@item.hotelName</a>

                        <p id="textt">
                            @item.shortDescription
                        </p>
                    </div>
                </div>

                @*<div class="Info">
                    <form action="hilton.html">
                        <button type="submit" class="btn btn-primary submitButton">Submit</button>
                    </form>
                </div>*@
            </div>

        }






    </div>
</div>