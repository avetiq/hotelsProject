<Window x:Class="FrontPart.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FrontPart"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
   
        <Grid x:Name="Grid1">
        <StackPanel Margin="20">
            <Label Content="Username" FontSize="15" RenderTransformOrigin="0.487,0.574" Height="37" Margin="0,0,635,0"/>
            <TextBox Name ="txtUsername"  Foreground="Black" FontSize="18" Height="41" Margin="0,0,419,0" />
            <Label Content="Password"   FontSize="15" RenderTransformOrigin="0.487,0.574" Height="37" Margin="0,0,419,0"/>
            <PasswordBox x:Name="PasswordBox"   Height="37" FontSize="20" Margin="0,0,419,0" RenderTransformOrigin="-0.222,0.266"/>
            <Button Content="LogIn" IsDefault="True"   Width="113" Height="41" Margin="12,50,445,0" Click="Button_Click_1"/>
            <Label Content="You dont need to fill username and password, only click on Login button."/>

        </StackPanel>
    </Grid>
</Window>
